###
# this is for the game cards in the single game's game
# LIST GAME CARDS
GET {{ TENANT_BASE_URL }}/games/c4d5c5fb-2ba4-4319-98b3-b9a528bcd448/cards HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}


###
# CREATE GAME CARD
POST {{ TENANT_BASE_URL }}/games/c4d5c5fb-2ba4-4319-98b3-b9a528bcd448/cards HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}

{
  "userId": "{{ userId }}"
}


###
# RETRIEVE GAME CARD
GET {{ TENANT_BASE_URL }}/games/c4d5c5fb-2ba4-4319-98b3-b9a528bcd448/cards/{{ cardId }} HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}


###
# DELETE  GAME GAME
DELETE {{ TENANT_BASE_URL }}/games/c4d5c5fb-2ba4-4319-98b3-b9a528bcd448/cards/{{ cardId }} HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}